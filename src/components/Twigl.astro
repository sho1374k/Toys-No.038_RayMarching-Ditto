---
const TWIGL_URL = import.meta.env.PUBLIC_TWIGL;
---
<a
href={TWIGL_URL}
class="cTwigl"
target="_blank"
rel="noopener noreferrer"
aria-label="twigl.app"
>
<img src="/assets/img/icon_twigl.png" alt="twigl.app" width="180" height="180">
</a>

<style lang="scss">
  @use "../styles/global/_app" as *;
  a{
    position: fixed;
    bottom: 24px;
    left: 24px * 2 + 8px;
    z-index: 100;
    width: 20px;
    height: 20px;
    @include sp_w(){
      bottom: 16px;
      left: 16px * 2 + 8px;
      width: 18px;
      height: 18px
    }

    img{
      pointer-events: none;
      user-select: none;
      width: 100%;
      height: 100%;
      filter: contrast(0.5);
      opacity: 1;
      transition: .4s $easeInOutExpo opacity;
    }

    @include hover(){
      img{
        opacity: .5;
      }
    }
  }
</style>
