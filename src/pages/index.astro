---
import "../styles/app.scss";
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<h1 class="cTitle">Ray Marching Ditto üòê</h1>
	<canvas id="sketch"></canvas>
	<div class="cBtnToggle">
		<input id="jsBtnToggle" class="cBtnToggle__input" type="checkbox" />
		<label for="jsBtnToggle" class="cBtnToggle__label"/>
	</div>
</Layout>
<style lang="scss">
	@use "../styles/global/app" as *;
	:root{
		// --green: #4BD865;
		--ui-toggle: #E3BFE5;
	}

	$ease: $easeInOutExpo;
	$duration: .4s;

	.cBtnToggle{
		pointer-events: none;
		user-select: none;
		position: fixed;
		bottom: 24px;
		left: 0;
		right: 0;
		z-index: 10;
		margin: auto;
		width: 75px;
		height: 32px;
		opacity: 0;
		@include sp_w(){
			bottom: 64px;
		}
		body[data-loaded="1"] & {
			pointer-events: initial;
			user-select: initial;
    transition: 1s $easeout opacity;
			opacity: 1;
		}
	}
	.cBtnToggle__input{
		cursor: pointer;
		position: absolute;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		opacity: 0;
	}
	.cBtnToggle__label{
		position: relative;
		z-index: 0;
		width: 100%;
		height: 100%;
		background: #fff;
		display: inline-block;
		border-radius: 24px;
		box-sizing: border-box;
		transition: $duration $ease background;
		&::before{
			content: "";
			position: absolute;
			top: 4px;
			left: 4px;
			width: 24px;
			height: 24px;
			border-radius: 100%;
			z-index: 2;
			background: var(--ui-toggle);
			transition: $duration $easeInOutExpo transform, $duration $ease background;
			transform: translate(0,0);
		}
	}
	.cBtnToggle__input:checked + .cBtnToggle__label {
		background: var(--ui-toggle);
	}
	.cBtnToggle__input:checked + .cBtnToggle__label:before {
		transform: translate(40px,0);
		background: var(--white);
	}

	h1{
		position: fixed;
		top: 16px;
		left: 16px;
		z-index: 100;
		font-size: 16px;
		font-weight: bold;
		-webkit-text-stroke: 1px;
		color: var(--black);
		text-transform: uppercase;
	}
</style>

<script src="../scripts/app.js"></script>
